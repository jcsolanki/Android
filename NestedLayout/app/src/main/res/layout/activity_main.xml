<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCoc"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/coc" />

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameCoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clash of Clans"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingBarCoc"
                android:layout_width="91dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewRatingCoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCod"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cod" />

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameCod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Call of Duty"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingBarCod"
                android:layout_width="146dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewRatingCod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageTp"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tp" />

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameTp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Teen Patti"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingBarTp"
                android:layout_width="191dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewRatingTp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageFs"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/fs" />

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameFs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farming Simulator"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingBarFs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewRatingFs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>